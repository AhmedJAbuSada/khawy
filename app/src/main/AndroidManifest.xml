        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.Khawi"
        tools:replace="android:supportsRtl"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.walkthrough.WalkthroughActivity"/>
        <activity android:name=".ui.main.main.MainActivity"/>
        <activity android:name=".ui.static_page.StaticContentActivity"/>
        <activity android:name=".ui.select_destination.SelectDestinationActivity"/>


