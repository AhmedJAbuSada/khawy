<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Khawi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/red</item>
        <item name="fontFamily">@font/main_font</item>
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="Theme.Khawi" parent="Base.Theme.Khawi" />

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
        <item name="itemFillColor">@null</item>
        <item name="itemIconTint">@null</item>
    </style>

    <style name="ActiveText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="InactiveText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">9sp</item>
    </style>

    <declare-styleable name="ExpandableTextView">
        <attr name="trimLength" format="integer" />
    </declare-styleable>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ff_shamel_family_sans_one_bold</item>
    </style>
</resources>