<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/normalNotificationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dotIV"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/circle_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:textColor="#A4ACAD"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/dotIV"
            app:layout_constraintTop_toTopOf="@+id/dotIV" />

        <TextView
            android:id="@+id/notificationContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="18dp"
            android:maxLines="3"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/dotIV"
            app:layout_constraintStart_toEndOf="@+id/notificationTime"
            app:layout_constraintTop_toBottomOf="@+id/notificationTitle" />

        <TextView
            android:id="@+id/notificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A4ACAD"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notificationContent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#E6E9EA"
            app:layout_constraintTop_toBottomOf="@+id/notificationContent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/actionNotificationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconIV"
            android:layout_width="94dp"
            android:layout_height="92dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_green_12r"
            android:scaleType="centerInside"
            android:src="@drawable/accept_order_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notificationActionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:textColor="@color/main"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/iconIV"
            app:layout_constraintTop_toTopOf="@+id/iconIV" />

        <TextView
            android:id="@+id/notificationActionContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="18dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/iconIV"
            app:layout_constraintStart_toEndOf="@+id/notificationActionTime"
            app:layout_constraintTop_toBottomOf="@+id/notificationActionTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="18dp"
            android:drawablePadding="11dp"
            android:text="@string/show_details"
            android:textColor="@color/main"
            android:textSize="12sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/arrow_show_details"
            app:layout_constraintEnd_toStartOf="@+id/iconIV"
            app:layout_constraintTop_toBottomOf="@+id/notificationActionContent" />

        <TextView
            android:id="@+id/notificationActionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A4ACAD"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iconIV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iconIV" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#E6E9EA"
            app:layout_constraintTop_toBottomOf="@+id/iconIV" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>