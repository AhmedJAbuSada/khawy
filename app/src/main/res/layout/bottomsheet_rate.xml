<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_corner_16r">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageRate"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_margin="24dp"
        android:src="@drawable/profile_img"
        app:civ_border_color="@color/main"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:includeFontPadding="false"
        android:text="أحمد علي"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/userImageRate"
        app:layout_constraintEnd_toEndOf="@+id/userImageRate"
        app:layout_constraintTop_toBottomOf="@+id/userImageRate" />

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/ratingBarRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameRate"
        app:srb_clearRatingEnabled="false"
        app:srb_clickable="true"
        app:srb_drawableEmpty="@drawable/ic_unselected_star"
        app:srb_drawableFilled="@drawable/ic_selected_star"
        app:srb_isIndicator="false"
        app:srb_numStars="5"
        app:srb_scrollable="false"
        app:srb_starHeight="22dp"
        app:srb_starPadding="3dp"
        app:srb_starWidth="22dp"
        app:srb_stepSize="1.0" />

    <EditText
        android:id="@+id/noteETRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/bg_edit_text"
        android:gravity="top"
        android:hint="@string/add_note_optional"
        android:imeOptions="actionNone"
        android:inputType="textMultiLine"
        android:minHeight="56dp"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/grey4"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarRate" />

    <TextView
        android:id="@+id/rateBtn"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_main"
        android:gravity="center"
        android:text="@string/rate"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteETRate" />


</androidx.constraintlayout.widget.ConstraintLayout>